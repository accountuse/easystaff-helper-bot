[mysqld]
log_error = /var/log/mysql/mariadb.err
log_warnings = 4

# Network timeouts (active transfer)
net_read_timeout = 120
net_write_timeout = 120
max_allowed_packet = 64M

# Idle connection timeouts (before server kills connection)
wait_timeout = 60           # 8 hours (28800)
interactive_timeout = 28800    # 8 hours